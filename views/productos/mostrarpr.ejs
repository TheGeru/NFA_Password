<%-  include("../templates/encabezado") %>
<%-  include("../templates/menu") %>

<div class="container mt-5">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Productos</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                            <th>Editar / Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        productos.forEach((producto)=>{
                        %>
                        <tr>
                            <td><%= producto.id %></td>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.precio %></td>
                            <td><img width="100px" height="100px" src="/images/<%=producto.foto %>"></td>
                            <td>
                                <a href="/productos/productos/editarPr/<%= producto.id %>">Editar |</a>
                                <a href="/productos/productos/borrarPr/<%= producto.id %>">Borrar</a>
                            </td>
                        </tr>
                        <%
                        });
                        %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>


<%-  include("../templates/pie") %>


